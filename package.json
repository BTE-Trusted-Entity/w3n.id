{
  "name": "w3n.id",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "parcel --open --port 1235",
    "build": "parcel build",
    "check": "tsc --noEmit",
    "test-size": "bundlewatch --config bundlewatch.config.json",
    "lint": "yarn run lint-css --formatter github && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint --max-warnings 0 --fix \"src/**/*.css\"",
    "css": "tcm --pattern 'src/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "prettify": "prettier --write \"src/**/*.ts*\" \"src/**/*.css*\""
  },
  "dependencies": {
    "@kiltprotocol/sdk-js": "0.31.1",
    "@polkadot/api": "^9.14.2",
    "@polkadot/extension-dapp": "^0.44.9",
    "@polkadot/util-crypto": "^10.4.2",
    "ky": "^0.33.3",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6",
    "swr": "^2.1.0"
  },
  "devDependencies": {
    "@parcel/transformer-svg-react": "^2.7.0",
    "@types/lodash-es": "^4.17.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "buffer": "^6.0.3",
    "bundlewatch": "^0.3.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "events": "^3.3.0",
    "parcel": "^2.7.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.5",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-standard": "^31.0.0",
    "typed-css-modules": "^0.7.2",
    "typescript": "^5.0.2",
    "typescript-plugin-css-modules": "^4.2.3"
  },
  "browserslist": {
    "production": [
      ">1%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "targets": {
    "default": {
      "source": "src/index.html",
      "distDir": "build",
      "context": "browser"
    }
  },
  "engines": {
    "node": ">=v16.19.1"
  }
}
