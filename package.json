{
  "name": "w3n.id",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "parcel --open --port 1235",
    "build": "parcel build",
    "check": "tsc --noEmit",
    "test-size": "bundlewatch --config bundlewatch.config.json",
    "lint": "yarn run lint-css --formatter github && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint --max-warnings 0 \"src/**/*.css\"",
    "css": "tcm --pattern 'src/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "prettify": "prettier --write \"src/**/*.ts*\" \"src/**/*.css*\""
  },
  "dependencies": {
    "@kiltprotocol/sdk-js": "^0.34.0",
    "@polkadot/api": "^10.9.1",
    "@polkadot/extension-dapp": "^0.46.5",
    "@polkadot/util-crypto": "^12.5.1",
    "ky": "^1.0.1",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6",
    "swr": "^2.2.2"
  },
  "devDependencies": {
    "@parcel/transformer-svg-react": "^2.7.0",
    "@types/lodash-es": "^4.17.9",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "buffer": "^6.0.3",
    "bundlewatch": "^0.3.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.29.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.3.1",
    "events": "^3.3.0",
    "parcel": "^2.7.0",
    "postcss": "^8.4.30",
    "prettier": "3.0.3",
    "process": "^0.11.10",
    "stylelint": "^15.10.3",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "typed-css-modules": "^0.7.2",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.1"
  },
  "browserslist": {
    "production": [
      ">1%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "targets": {
    "default": {
      "source": "src/index.html",
      "distDir": "build",
      "context": "browser"
    }
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
